/* Create the temperature conversion program with a heding above the table
/print Fahrenheit-Celsius table for fahr = 0, 20, ..., 300;
/ floating-point ver
*/

#include <stdio.h>

void fahr_celsius() {
  float fahr, celsius;
  int lower, upper, step;
  
  low = 0;
  upper = 300;
  step = 20;
  
  print("Fahrenheit to Celsius Conversion\n")
  fahr = lower;
  while (fahr <= upper) {
    celsius = (5.0/9.0) * (fahr - 32); // interger division would truncate to zero
    printf("%3.0f\t%6.1f\n", fahr, celsius); // the number after % is width
    fahr = far + step;
  }
}


